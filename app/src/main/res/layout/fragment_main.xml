<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.newsapp.views.MainViewModel" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.newsapp.views.MainFragment">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest_news"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            tools:text="Latest News" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all"
            android:textColor="@color/material_dynamic_primary50"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            tools:text="See all ->" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_list"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:horizontalnews="@{viewModel.newsList.subList(0,5)}"
            app:reverseLayout="false"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="16"
            tools:listitem="@layout/horizontal_view_item" />

        <HorizontalScrollView
            android:id="@+id/category_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_list"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/business"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/business"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_selector"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/entertainment"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_selector"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/general"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/general"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_selector"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/health"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/health"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_selector"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/science"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/science"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_selector"
                    android:textAllCaps="false"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/technology"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/technology"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_selector"
                    android:textAllCaps="false"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_bar"
            app:listData="@{viewModel.categoryNewsList}"
            tools:itemCount="16"
            tools:listitem="@layout/linear_view_item" />



        <ImageView
            android:id="@+id/status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:apiStatus="@{viewModel.status}" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>