<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.newsapp.ui.fragment.MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_newsDetailFragment2"
            app:destination="@id/newsDetailFragment2" />
        <action
            android:id="@+id/action_mainFragment_to_allNewsFragment"
            app:destination="@id/allNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailFragment2"
        android:name="com.example.newsapp.ui.fragment.NewsDetailFragment" />
    <fragment
        android:id="@+id/allNewsFragment"
        android:name="com.example.newsapp.ui.fragment.AllNewsFragment"
        android:label="All News">
        <action
            android:id="@+id/action_allNewsFragment_to_newsDetailFragment2"
            app:destination="@id/newsDetailFragment2" />
    </fragment>
</navigation>